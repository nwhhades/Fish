<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <cn.haizhe.cat.widget.button.TvButton
        android:id="@+id/btn1"
        android:layout_width="700pt"
        android:layout_height="180pt"
        android:layout_marginTop="200pt"
        android:text="请求测试"
        android:textColor="@color/btn_text_color"
        android:textSize="90pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Hello World!"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.haizhe.cat.weather.TianqiView
        android:id="@+id/tianqi_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.haizhe.cat.widget.text.AutoMarqueeTextView
        android:layout_width="500pt"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:text="1213afasdfsdfsdfsd"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <cn.haizhe.cat.widget.banner.TvBanner
        android:id="@+id/tb_banner"
        android:layout_width="1800pt"
        android:layout_height="1000pt"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>